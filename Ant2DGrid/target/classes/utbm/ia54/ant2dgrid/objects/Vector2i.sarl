package utbm.ia54.ant2dgrid.objects

import java.util.Objects

/** 
 * Simple 2D Vector contains x and y position
 * @author Michel
 * 
 */
class Vector2i {
	
	/*
	 * The position x
	 */
	private var x: int
	
	/*
	 * The position y
	 */
	private var y : int
	
	new(){
		this.x = 0
		this.y = 0
	}
	
	new(x : int, y : int){
		this.x = x;
		this.y = y
	}
	
	new(v : Vector2i){
		this.x = v.getX
		this.y = v.getY
	}
	
	def getX : int {
		this.x
	}
	
	def getY : int {
		this.y
	}
	
	def setX(x : int){
		this.x = x
	}
	
	def setY(y : int){
		this.y = y
	}
	
	def setXY(x : int, y : int){
		this.x = x
		this.y = y
	}
	
	def setXY(v : Vector2i){
		this.x = v.getX
		this.y = v.getY
	}
	
	def plus(v : Vector2i){
		this.x += v.x
		this.y += v.y
	}
	
	def plus(x : int, y: int){
		this.x += x
		this.y += y
	}
	
	def equals(obj: Object) : boolean{
		var bool = false
		if(obj instanceof Vector2i){
			var v = obj as Vector2i
			if(v.x.equals(x) && v.y.equals(y)){
				bool = true
			}
		}
		bool
	}
	
	def toString : String{
		return "X : " + x + ", Y : " + y
	}
}
