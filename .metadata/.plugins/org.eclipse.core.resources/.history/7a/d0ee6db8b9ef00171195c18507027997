skill EnvironmentManagerSkill implements EnvironmentManagerCapacity{
	
	val width : int
	val height : int
	var grid : List<Cell>
	val antQuantity : int
	
	new(width : int, height : int, grid : List<Cell>, quantity : int) {
		this.width = width
		this.height = height
		this.grid = grid
		this.antQuantity = quantity
	}
	
	def install{
		
	}
	
	def uninstall{
		
	}
	
	def getWidth : int {
		this.width
	}
	
	def getHeight : int {
		this.height
	}
	
	def getGrid : List<Cell> {
		this.grid
	}
	
	def getAntQuantity : int{
		this.antQuantity
	}
	
